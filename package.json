{
  "name": "@femessage/v-editor",
  "version": "1.0.1",
  "description": "upload img and write rich text easily",
  "author": "https://github.com/FEMessage",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/FEMessage/v-editor.git"
  },
  "keywords": ["vue", "sfc", "component"],
  "main": "dist/v-editor.umd.js",
  "module": "dist/v-editor.esm.js",
  "unpkg": "dist/v-editor.min.js",
  "browser": {
    "./sfc": "src/v-editor.vue"
  },
  "scripts": {
    "styleguide": "vue-styleguidist server",
    "story": "start-storybook -p 3000 -c .storybook",
    "story:build": "build-storybook -c .storybook -o docs/storybook",
    "doc": "vue-styleguidist build",
    "test": "jest",
    "build":
      "npm run build:unpkg & npm run build:es & npm run build:umd & npm run doc & npm run story:build",
    "build:umd":
      "rollup --config build/rollup.config.js --format umd --file dist/v-editor.umd.js",
    "build:es":
      "rollup --config build/rollup.config.js --format es --file dist/v-editor.esm.js",
    "build:unpkg":
      "rollup --config build/rollup.config.js --format iife --file dist/v-editor.min.js",
    "prepublishOnly": "npm run build",
    "precommit": "pretty-quick --staged",
    "postpublish": "git add docs && git add dist && git commit -a --amend"
  },
  "dependencies": {
    "wangeditor": "^3.1.1"
  },
  "devDependencies": {
    "@femessage/img-preview": "^1.1.1",
    "@femessage/upload-to-ali": "^1.1.0",
    "@storybook/vue": "^3.4.10",
    "@vue/test-utils": "^1.0.0-beta.16",
    "babel-jest": "^23.0.1",
    "babel-plugin-transform-runtime": "^6.23.0",
    "babel-preset-env": "^1.7.0",
    "element-ui": "^2.4.11",
    "husky": "^0.14.3",
    "jest": "^23.1.0",
    "minimist": "^1.2.0",
    "prettier": "1.12.1",
    "pretty-quick": "^1.4.1",
    "rollup": "^0.57.1",
    "rollup-plugin-babel": "^3.0.7",
    "rollup-plugin-uglify-es": "0.0.1",
    "rollup-plugin-vue": "^3.0.0",
    "stylus": "^0.54.5",
    "stylus-loader": "^3.0.2",
    "vue": "^2.5.16",
    "vue-jest": "^2.6.0",
    "vue-styleguidist": "1.7.7",
    "vue-template-compiler": "^2.5.16",
    "webpack": "^3.10.0"
  },
  "files": ["src", "dist", "yarn.lock"],
  "jest": {
    "moduleFileExtensions": ["js", "vue"],
    "transform": {
      "^.+\\.js$": "./node_modules/babel-jest",
      "^.+\\.vue$": "./node_modules/vue-jest"
    }
  },
  "engines": {
    "node": ">= 4.0.0",
    "npm": ">= 3.0.0"
  },
  "peerDependencies": {
    "@femessage/img-preview": "^1.1.1",
    "@femessage/upload-to-ali": "^1.1.0"
  }
}
